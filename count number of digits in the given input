// count number of digits in the given input

#include<stdio.h>
#include<ctype.h>
#include<string.h>
void main()
{
 char ch[10];
 int count = 0;
 printf("Enter an input : ");
 scanf("%s",ch);

 for(int i=0;i<=strlen(ch);i++)
 {
  if(isdigit(ch[i]))
  {
   count++;
  }
 }
  printf("No. of digits in the Input is %d",count);
}

********************************************************************
Output

Enter an input : #KSRCT1994
No. of digits in the Input is 4
********************************************************************



