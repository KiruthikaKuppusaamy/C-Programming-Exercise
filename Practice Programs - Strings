#include <stdio.h>
#include <ctype.h>
void main() 
{
    printf("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~");
    printf("\nProgram by : NAGUL PRATHISH S - III Year B.E. EEE");
    printf("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~\n");

    char a[50],b[50];
    int i,c=0;
    scanf("%[^\n]s",a);
    for(i=0;a[i]!='\0';i++)
    {
        c++;
    }
    for(i=0;i<c;i++)
    {
        if(isalpha(a[i]))
        {
            printf("%c",a[i]);
        }
    }

}


_____________________________________________________________________________________________________
Output:

