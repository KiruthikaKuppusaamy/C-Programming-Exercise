5.WRITE A C PROGRAM FIND THE DETERMINANT OF A 3Ã—3 MATRIX
---------------------------------------------------------------

#include <stdio.h>
void main() {
    int matrix[3][3];
    int i, j;
    printf("Enter elements of a 3x3 matrix:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            printf("Enter element [%d][%d]: ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }
    printf("\nThe 3x3 matrix is:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            printf("%d", matrix[i][j]);
            printf("\t");
        }
        printf("\n"); 
    }
}

