5.WRITE A C PROGRAM TO COPY AN ARRAT TO ANOTHER ARRAY
------------------------------------------------------------------

#include <stdio.h>
 int main()
{
    int a[5];
    int b[5];
    int s;
    printf ("enter the number of elements:");
    scanf("%d", &s);
    for (int i=0; i<s; i++)
    {
      printf ("enter the elements:");
      scanf("%d",&a[i]);  
    }
    
    for (int i=0; i<s; i++)
    {
        b[i] = a[i]; 
    }
    printf("Array 1: ");
    for (int i=0; i<s; i++)
    {
    printf("%d ", a[i]);
    }
    printf("\n");
    printf("Array 2: ");
    for (int i=0; i<s; i++)
    { 
    printf("%d ", b[i]); 
    }
printf("\n");
return 0;
}

