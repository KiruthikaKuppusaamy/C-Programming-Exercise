// Multiplication table

/* Using for loop */

#include <stdio.h>

int main() 
{
    int n,i;
    
    printf("Nter the number to print multiplication table :");
    scanf("%d",&n);
    
    for(i=1;i<=10;i++)
    {
        printf("%d x %d = %d\n",i,n,i*n);
    }

    return 0;
}


/* Using while loop */

#include <stdio.h>

int main() 
{
    int n,i=1;
    
    printf("Nter the number to print multiplication table :");
    scanf("%d",&n);
    
    while(i<=10)
    {
        printf("%d x %d = %d\n",i,n,i*n);
        i++;
    }

    return 0;
}


/* Using do.. while loop */

#include <stdio.h>

int main() 
{
    int n,i=1;
    
    printf("Nter the number to print multiplication table :");
    scanf("%d",&n);
    
    do
    {
        printf("%d x %d = %d\n",i,n,i*n);
        i++;
    }while(i<=10);

    return 0;
}

************************************************************************************************************
Input
Nter the number to print multiplication table :2

Output
1 x 2 = 2
2 x 2 = 4
3 x 2 = 6
4 x 2 = 8
5 x 2 = 10
6 x 2 = 12
7 x 2 = 14
8 x 2 = 16
9 x 2 = 18
10 x 2 = 20
************************************************************************************************************
