// C Program to Sum of Digits of a Number
// Using for loop

#include <stdio.h>
void main()
{
    int number,sum=0;
    
    printf("Enter the number");
    scanf("%d",&number);
    
    for(;number!=0;number = number/10)
    {
        sum = sum + number%10;
    }
    printf("Sum of the given no is %d",sum);
}

// Using while loop

#include <stdio.h>

void main()
{
    int number,sum=0;
    
    printf("Enter the number");
    scanf("%d",&number);
    
    while(number!=0)
    {
      sum = sum + number%10;
      number = number/10;
    }
    printf("Sum of the given no is %d",sum);
}
